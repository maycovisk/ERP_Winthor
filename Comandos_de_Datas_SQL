1. COMADOS DE  DATAS

SELECT TRUNC(SYSDATE) AS HOJE
    
    ,ADD_MONTHS(TRUNC(SYSDATE),-1) AS MES_PASSADO
    
    ,LAST_DAY(TRUNC(SYSDATE)) AS ULTIMO_DIA_DO_MES
    
    ,TRUNC(SYSDATE, 'MM') AS PRIMEIRO_DIA_DO_MES
    
    ,TRUNC(SYSDATE, 'YYYY') AS PRIMEIRO_DIA_DO_ANO

    ,TRUNC(SYSDATE, 'W')+1 AS PRIMEIRO_DI'A_DA_SEMANA --VALIDAR
    
    ,NEXT_DAY(TRUNC(SYSDATE, 'MONTH'),5) AS PRIMEIRA_QUINTA_FEIRA_DO_MES
    
    ,TO_CHAR(TRUNC(SYSDATE), 'D') AS DIA_DA_SEMANA
    
    ,TO_CHAR(TRUNC(SYSDATE), 'DD') AS DIA_DE_HOJE
    
    ,TO_CHAR(TRUNC(SYSDATE), 'DDD') AS DIA_DO_ANO
    
    ,TO_CHAR(TRUNC(SYSDATE), 'W')+1 AS SEMANA_DE_HOJE --VALIDAR
    
    ,TO_CHAR(TRUNC(SYSDATE), 'WW')+1 AS SEMANA_DO_ANO --VALIDAR

    ,TO_CHAR (SYSDATE,'DD "DE" FMMONTH "DE" YYYY', 'NLS_DATE_LANGUAGE = PORTUGUESE')  -- CONVERTER DATA  PARA UM TEXTO POR EXTENSO

,TRUNC (MONTHS_BETWEEN(SYSDATE,AQUI)) || 'MESES' MESES -- QUANTIDADES DE MESES ENTRE DUAS DATAS  -> TIRAR "AQUI" E COLOCAR A DATA ESCOLHIDA    

FROM DUAL;

SELECT TRUNC(SYSDATE) AS HOJE  --PASSO A PASSO DO CALCULO DA DATA_DA_SEMANA
    ,TO_CHAR(TRUNC(SYSDATE), 'D') AS DIA_DA_SEMANA
    ,TRUNC(SYSDATE, 'W')+1 AS PRIMEIRO_DIA_DA_SEMANA --VALIDAR
    ,LEVEL
    ,TRUNC(SYSDATE, 'W')+1 + LEVEL -1 AS DATA_SEMANA
    
FROM DUAL
CONNECT BY LEVEL <= 7 ;

SELECT TRUNC(SYSDATE, 'W')+1 + LEVEL -1 AS DATA_SEMANA  --RESUMO DE COMANDO A CIMA
    
FROM DUAL
CONNECT BY LEVEL <= 7 ;
